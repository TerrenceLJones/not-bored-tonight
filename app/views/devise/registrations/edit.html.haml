.form-container
  %h2.user-account-task-title Edit Profile #{resource_name.to_s.humanize}
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    .form-inputs
      = f.error_notification
      = f.input :first_name, required: true, autofocus: true, label: 'First Name'
      = f.input :last_name, required: true, label: 'Last Name'
      = f.input :email, required: true
      - if "#{@user.provider}".blank?
        = f.input :password, autocomplete: "off"
        = f.input :password_confirmation, required: true
        = f.input :current_password, required: true, hint: "we need your current password to confirm your changes"
    .form-actions
      = f.button :submit, "Update Account"
      .cancel-account
        %h3 Cancel my account
        %p Unhappy? #{ link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete }
        = link_to "Cancel Edit", :back
